<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_gray_trans"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_twenty"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/size_ten">

        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="@dimen/size_five"
                    android:src="@drawable/ic_close_circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_twenty"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_ad_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center"
                            android:text="86"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_twenty_four" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center"
                            android:text="@string/ad_views"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_sixteen" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_contact_view_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center"
                            android:text="10"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_twenty_four" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="center"
                            android:text="@string/contact_views"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/size_sixteen" />


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_page_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/size_twenty_four" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:text="@string/page_views"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/size_sixteen" />


                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="@dimen/size_ten"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_five"
                    android:paddingBottom="@dimen/size_five"
                    android:text="@string/page_views_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_fourteen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_no_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:gravity="center"
                    android:text="@string/page_views_content_two"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_sixteen" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/size_forty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:text="@string/ad_views"
                        android:textColor="@color/color_black"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:textSize="@dimen/size_sixteen" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
