<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_gray_trans"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_ten"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/size_ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_ten">


            <TextView
                android:id="@+id/txt_content_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_twenty"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="@string/update_location_for_bill"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_eighteen" />


            <TextView
                android:id="@+id/txt_content_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_regular"
                android:gravity="center"
                android:text="@string/update_location_for_bill_two"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size_twelve"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_ten"

                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_orenge"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:paddingLeft="@dimen/size_twenty"
                        android:paddingRight="@dimen/size_twenty"
                        android:text="@string/txt_profile_edit"
                        android:textAllCaps="false"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size_thirteen" />

                    <TextView
                        android:id="@+id/txt_skip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:padding="@dimen/size_five"
                        android:text="@string/txt_skip"
                        android:textColor="@color/txt_orange"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
