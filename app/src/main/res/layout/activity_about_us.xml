<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".activity.AboutUsActivity">
    <include
        layout="@layout/layout_header"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_slowr" />



        <TextView
            android:id="@+id/txt_about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/about_sample"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_fifteen" />


        <TextView
            android:id="@+id/txt_web_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/slowr_link"
            android:textColor="@color/txt_orange"
            android:textSize="@dimen/size_sixteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_twitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_twitter_logo" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_face_book"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_fb_logo" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_ig_colour" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    </ScrollView>
</LinearLayout>