<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    tools:context=".activity.AboutUsActivity">
    <include
        layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="20dp">

        <TextView
            style="@style/attribute_title"
            android:layout_gravity="center"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/about_slowr"
            android:textSize="@dimen/size_twenty" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_ten"
            android:src="@drawable/ic_slowr_logo" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/nunito_regular"
            android:text="@string/about_sample"
            android:textColor="@color/color_black"
            android:textSize="@dimen/size_fourteen" />

        <TextView
            android:id="@+id/txt_web_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/slowr_link"
            android:textColor="@color/txt_orange"
            android:textSize="@dimen/size_sixteen" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_twitter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_twitter_logo" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_face_book"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_fb_logo" />
            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_instagram"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_ripple_effect"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_google_logo" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="92dp"
        android:layout_marginTop="144dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>