<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_twenty"
                android:paddingTop="@dimen/size_fifteen"
                android:paddingBottom="@dimen/size_fifteen">


                <TextView
                    style="@style/attribute_title"
                    android:text="Prosper ID"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_ten" />

                <TextView
                    android:id="@+id/txt_prosperId"
                    style="@style/attribute_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="AB1234"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_fourteen" />

                <TextView
                    android:id="@+id/txt_banner_content"
                    style="@style/attribute_title"
                    android:layout_marginTop="@dimen/size_five"
                    android:text="EPSON projector for office use."
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_ten" />

                <TextView
                    android:id="@+id/txt_banner_price"
                    style="@style/attribute_title"
                    android:text="Renting @ â‚¹1800/day"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_ten" />

                <TextView
                    android:id="@+id/txt_banner_like"
                    style="@style/attribute_title"
                    android:layout_marginTop="@dimen/size_five"
                    android:drawableLeft="@drawable/ic_like"
                    android:drawablePadding="@dimen/size_five"
                    android:text="4536"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_ten" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="@dimen/size_twenty"
                    android:layout_marginRight="@dimen/size_twenty"
                    android:src="@drawable/ic_default_vertical" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/size_fifteen"
            android:layout_marginRight="@dimen/size_ten"
            android:src="@drawable/ic_verified" />

    </FrameLayout>

</LinearLayout>
