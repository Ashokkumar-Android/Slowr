<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/defult_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:src="@drawable/default_banner" />

        <LinearLayout
            android:id="@+id/layout_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_trans"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_fourteen"
                android:paddingRight="@dimen/size_fourteen"
                android:paddingTop="@dimen/size_fifteen"
                android:paddingBottom="@dimen/size_fifteen">


                <TextView
                    style="@style/attribute_title"
                    android:text="Prosper ID"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_ten" />

                <TextView
                    android:id="@+id/txt_prosperId"
                    style="@style/attribute_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="AB1234"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_fourteen" />

                <TextView
                    android:id="@+id/txt_banner_content"
                    style="@style/attribute_title"
                    android:text="EPSON projector for office use."
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_twelve" />

                <TextView
                    android:id="@+id/txt_banner_price"
                    style="@style/attribute_title"
                    android:text="Renting @ â‚¹1800/day"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/size_ten" />

                <TextView
                    android:id="@+id/txt_banner_like"
                    style="@style/attribute_title"
                    android:layout_marginTop="@dimen/size_five"
                    android:drawableLeft="@drawable/ic_like"
                    android:drawablePadding="@dimen/size_five"
                    android:text="4536"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_ten" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/size_five"
                    android:src="@drawable/ic_default_vertical" />
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>
