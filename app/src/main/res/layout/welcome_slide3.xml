<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/intro_three">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_above="@id/txt_content_three"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/size_thirdy"
            android:src="@drawable/ic_slowr_s" />


        <TextView
            android:id="@+id/txt_content_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center"
            android:text="@string/txt_intro_three"
            android:textColor="@android:color/white"
            android:textSize="@dimen/size_twenty" />


    </RelativeLayout>


</RelativeLayout>