<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_gray_trans"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_twenty"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/size_ten">

        <LinearLayout
            android:id="@+id/layout_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layout_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/size_ten">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close_circle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ad_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_twenty"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size_twenty"
                android:paddingRight="@dimen/size_twenty"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_name"
                    style="@style/ad_view_title"
                    android:drawableLeft="@drawable/ic_profile_two"
                    android:drawablePadding="@dimen/size_five"
                    android:text=""
                    android:gravity="center|left"
                    android:textSize="@dimen/size_fifteen" />

                <TextView
                    android:id="@+id/txt_phone"
                    style="@style/ad_view_title"
                    android:layout_marginTop="@dimen/size_ten"
                    android:drawableLeft="@drawable/ic_phone_two"
                    android:drawablePadding="@dimen/size_five"
                    android:text=""
                    android:gravity="center|left"
                    android:textSize="@dimen/size_fifteen" />

                <TextView
                    android:id="@+id/txt_whats_app"
                    style="@style/ad_view_title"
                    android:layout_marginTop="@dimen/size_ten"
                    android:drawableLeft="@drawable/ic_whats_app"
                    android:drawablePadding="@dimen/size_five"
                    android:text=""
                    android:gravity="center|left"
                    android:textSize="@dimen/size_fifteen" />

                <TextView
                    android:id="@+id/txt_email"
                    style="@style/ad_view_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_ten"
                    android:drawableLeft="@drawable/ic_email_two"
                    android:drawablePadding="@dimen/size_five"
                    android:ellipsize="marquee"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/size_fifteen" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
