<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="OtpViewTheme">
        <attr format="reference" name="otpViewStyle"/>
    </declare-styleable>

    <declare-styleable name="OtpView">
        <attr format="integer" name="itemCount"/>
        <attr format="dimension" name="itemWidth"/>
        <attr format="dimension" name="itemHeight"/>
        <attr format="dimension" name="itemRadius"/>
        <attr format="dimension" name="itemSpacing"/>
        <attr format="dimension" name="lineWidth"/>
        <attr format="reference|color" name="lineColor"/>
        <attr format="enum" name="viewType">
            <enum name="rectangle" value="0"/>
            <enum name="line" value="1"/>
            <enum name="none" value="2"/>
        </attr>
        <attr name="android:cursorVisible"/>
        <attr format="dimension" name="cursorWidth"/>
        <attr format="reference|color" name="cursorColor"/>
        <attr name="android:itemBackground"/>
        <attr format="boolean" name="hideLineWhenFilled"/>
        <attr format="boolean" name="state_filled"/>
        <attr format="boolean" name="rtlTextDirection"/>
        <attr format="string" name="maskingChar"/>
    </declare-styleable>

    <declare-styleable name="RoundishImageView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MaterialSpinner">
        <attr name="ms_baseColor" format="color"/>
        <attr name="ms_highlightColor" format="color"/>
        <attr name="ms_errorColor" format="color"/>
        <attr name="ms_error" format="string"/>
        <attr name="ms_hint" format="string"/>
        <attr name="ms_hintColor" format="color"/>
        <attr name="ms_hintTextSize" format="dimension"/>
        <attr name="ms_floatingLabelText" format="string"/>
        <attr name="ms_floatingLabelColor" format="color"/>
        <attr name="ms_multiline" format="boolean"/>
        <attr name="ms_nbErrorLines" format="integer"/>
        <attr name="ms_typeface" format="string"/>
        <attr name="ms_alignLabels" format="boolean"/>
        <attr name="ms_thickness" format="dimension"/>
        <attr name="ms_thickness_error" format="dimension"/>
        <attr name="ms_arrowSize" format="dimension"/>
        <attr name="ms_arrowColor" format="color"/>
        <attr name="ms_enableFloatingLabel" format="boolean"/>
        <attr name="ms_enableErrorLabel" format="boolean"/>
        <attr name="ms_alwaysShowFloatingLabel" format="boolean"/>
        <attr name="ms_isRtl" format="boolean"/>
        <attr name="ms_hintView" format="reference"/>
        <attr name="ms_dropDownHintView" format="reference"/>

    </declare-styleable>

    <declare-styleable name="CarouselView">
        <attr name="carouselMode" format="enum">
            <enum name="snap" value="0"/>
            <enum name="preview" value="1"/>
        </attr>
        <attr name="carouselPreviewSide" format="enum">
            <enum name="sides" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="carouselPreviewSideBySideStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="scale" value="1"/>
        </attr>
        <attr name="carouselPreviewScaleFactor" format="float"/>
        <attr name="carouselPreviewOffset" format="dimension"/>
        <attr name="carouselMargin" format="dimension"/>
    </declare-styleable>

</resources>
