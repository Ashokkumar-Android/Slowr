<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.slowr.matisse.ui.MatisseCropActivity">


    <com.slowr.matisse.internal.ui.widget.CropImageView
        android:id="@+id/crop_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />



    <LinearLayout
        android:id="@+id/img_profile_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle_ripple_effect"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/ic_back_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:gravity="center"

        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/crop_portait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/delete_img"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@drawable/circule_shape_orange"
            android:padding="5dp"
            android:src="@drawable/ic_crop_portarit"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/crop_rectangle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/delete_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/circule_shape_orange"
            android:padding="5dp"
            android:src="@drawable/ic_crop_rectable"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/crop_square"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/delete_img"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/circule_shape_orange"
            android:padding="5dp"
            android:src="@drawable/ic_crop_square"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignRight="@+id/finish"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@drawable/circule_shape_orange"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/ic_delete_img" />


    </LinearLayout>

    <com.slowr.matisse.ui.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="100dp" />


    <TextView
        android:id="@+id/crop_image_view_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/nunito_regular"
        android:padding="14dp"
        android:text="Edit crop"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/nunito_regular"
        android:padding="10dp"
        android:text="Previous"
        android:textColor="#FFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/nunito_regular"
        android:padding="10dp"
        android:text="Next"
        android:textColor="#FFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:fontFamily="@font/nunito_regular"
        android:padding="10dp"
        android:text="Finish"
        android:textColor="#FA820D"
        android:textSize="16dp"
        android:visibility="gone" />



</RelativeLayout>